{
    "name": "lephare/payum-paybox",
    "type": "library",
    "description": "Paybox extension for Payum",
    "keywords": ["payum", "paybox", "payment"],
    "homepage": "https://github.com/le-phare/payum-paybox",
    "license": "MIT",
    "authors": [
        {
            "name":     "Matthieu REMY",
            "email":    "remy.matthieu@gmail.com",
            "homepage": "https://github.com/remyma"
        }
    ],
    "require": {
        "payum/core": "^1.3"
    },
    "require-dev": {
        "php-http/guzzle6-adapter": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Marem\\PayumPaybox\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
	"lint:fix": [
		"vendor/bin/php-cs-fixer --config=.php_cs.dist --verbose --path-mode=intersection fix src client"
	]
    }
}
